rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read uploads (for org dashboard)
    match /uploads/{uploadId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to write uploads (for org dashboard functionality)
      allow write: if request.auth != null;
    }
    // Allow any authenticated user to read user details (for org dashboard)
    match /users/{userId} {
      allow read: if request.auth != null;
      // Only allow the user to write their own user doc
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow authenticated users to read and write notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
} 